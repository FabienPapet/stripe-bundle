{
    "name": "fpt/stripe-bundle",
    "description": "Stripe bundle for Symfony 5.4 / 6",
    "type": "symfony-bundle",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Fpt\\StripeBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fpt\\StripeBundle\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Fabien Papet",
            "email": "fabien.papet@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "symfony/framework-bundle": "^5.4|^6.0",
        "symfony/http-client": "^5.4|^6.0",
        "stripe/stripe-php": "^v7.121.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.17",
        "symfony/browser-kit": "^5.4|^6.0",
        "friendsofphp/php-cs-fixer": "v3.8.0",
        "twig/twig": "^3"
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    }
}
